COGEN=ruby gen/erbpp_interp.rb
GENSRC=gsl_interp.c
GENDEPS=gen/erbpp_interp.rb ../gen/*.rb ../gen/tmpl/*.c gen/tmpl/*.c

src : $(GENSRC)

$(GENSRC) : $(GENDEPS)
	$(COGEN) > $@

doc : $(GENSRC)
	yard doc $(GENSRC)

clean: cleansrc cleandoc
cleansrc:
	-$(Q)$(RM) $(GENSRC)
cleandoc:
	-$(Q)$(RM_RF) doc .yardoc
