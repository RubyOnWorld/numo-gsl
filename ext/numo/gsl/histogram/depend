COGEN=ruby gen/erbpp_histogram.rb
GENSRC=gsl_histogram.c
GENDEPS=gen/erbpp_histogram.rb ../gen/*.rb ../gen/tmpl/*.c gen/tmpl/*.c

$(GENSRC) : $(GENDEPS)
	$(COGEN) > $@

doc : $(GENSRC)
	yard doc $(GENSRC) types/*.c

clean: cleansrc cleandoc
cleansrc:
	-$(Q)$(RM) $(GENSRC)
cleandoc:
	-$(Q)$(RM_RF) doc .yardoc
